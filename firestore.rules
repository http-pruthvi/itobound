rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow other authenticated users to read basic profile info for matching
      allow read: if request.auth != null;
    }
    
    // Posts can be read by authenticated users, written by post owner
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Stories can be read by authenticated users, written by story owner
    match /stories/{storyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Matches can be read and written by participants
    match /matches/{matchId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.user1Id || request.auth.uid == resource.data.user2Id);
      allow create: if request.auth != null && 
        (request.auth.uid == request.resource.data.user1Id || request.auth.uid == request.resource.data.user2Id);
    }
    
    // Messages can be read and written by match participants
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null;
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Notifications can be read and written by the recipient
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
    
    // Swipe actions for matching system
    match /swipes/{swipeId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.swiperId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.swiperId;
    }
    
    // Allow authenticated users to read public data
    match /public/{document=**} {
      allow read: if request.auth != null;
    }
  }
}
